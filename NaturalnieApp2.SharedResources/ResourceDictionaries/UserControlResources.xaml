<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Views/Resources/ColorResources.xaml"/>
    </ResourceDictionary.MergedDictionaries>


    <Style x:Key="GeneralBackgroundColor" TargetType="UserControl">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource GeneralBackgorundColor}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DarkBackgroundColor" TargetType="UserControl">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource DarkBackgorundColor}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BottomButtonBarStyle" TargetType="UserControl">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource NaturalnieHoneyColor}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="HeaderStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource NaturalnieSandColor}"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>