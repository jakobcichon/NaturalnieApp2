<UserControl x:Class="NaturalnieApp2.Main.MVVM.Views.Inventory.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalnieApp2.Main.MVVM.Views.Inventory" 
             xmlns:datagrid="clr-namespace:NaturalnieApp2.SharedControls.CustomControls.DataGrid;assembly=NaturalnieApp2.SharedControls" xmlns:wizarddialog="clr-namespace:NaturalnieApp2.SharedControls.MVVM.Views.WizardDialog;assembly=NaturalnieApp2.SharedControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourcesDict.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.Background>
        <SolidColorBrush Color="{StaticResource DarkBackgorundColor}"/>
    </UserControl.Background>

    <Grid>
        <datagrid:DataGridCustom ItemsSource="{Binding InventoryEntries}"/>

        <ContentControl Content="{Binding WizardDialog}"/>
    </Grid>
</UserControl>
