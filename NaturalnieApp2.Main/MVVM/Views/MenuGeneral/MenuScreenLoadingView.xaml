<UserControl x:Class="NaturalnieApp2.Main.MVVM.Views.MenuGeneral.MenuScreenLoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalnieApp2.Main.MVVM.Views.MenuGeneral"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Background>
        <SolidColorBrush Color="AliceBlue" Opacity="0.9"/>
    </UserControl.Background>

    <Grid>
        <TextBlock Text="{Binding ScreenInfo}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
